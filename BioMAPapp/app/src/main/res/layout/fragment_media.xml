<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.eternaldeiwos.biomapapp.AuthenticatorActivity">

    <!-- Login progress -->

    <ScrollView
        android:id="@+id/media_fragment_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/media_fragment_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/CaptureDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/date"
                    android:inputType="text"
                    android:maxLines="1"
                    android:onClick="showDatePickerDialog" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/picture1"
                    android:textSize="25dp"
                    android:id="@+id/picture1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:onClick="onClickImage1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/picture2"
                    android:id="@+id/picture2"
                    android:onClick="onClickImage2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/picture3"
                    android:id="@+id/picture3"
                    android:onClick="onClickImage3" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
